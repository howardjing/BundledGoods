<%= render 'instructions' %>

<h1>Question <%= @question.number %></h1>

<div class="row">
  <div class="span6">
    <table class="table table-bordered">
      <thead><tr><th>Goods and Values</th></tr></thead>
      <% @question.goods.each do |number, value| %>
        <tr><td>Good <%= number %> has a value of <%= value %></td></tr>
      <% end %>
      <tr>
        <td>
          An all inclusive combo of all the goods has a value of <%= @question.combo_noeffect %>
        </td>
      </tr>
    </table>
  </div>
  
  <div class="span8">
    <table class="table table-bordered">
      <thead><tr><th>Complementary Effects</th></tr></thead>
      <% @question.effects.each do |bundle, value| %>
        <tr>
          <td class="show-statement">
            Click to show effects of <%= bundle.size == 1 ? 'good' : 'goods' %> <%= bundle %>
          </td>
          <td class="explanation">
            Purchasing <%= bundle.size == 1 ? 'good' : 'goods' %> <%= bundle %> in an exclusive bundle
            makes you value the bundle <%= value %> more than if you summed the individual goods.
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

  
<div class="choices span4">
  <div>
    </div>
  <h2>Your choice</h2> (<span id="timer" data-seconds="<%= @question.time_remaining %>"></span>)
  <%= form_tag experiment_path, { method: :put } do %>
    <div class="row">
      <div class="span2">
        <label><b>Choose goods</b></label>
        <% @question.goods.each do |number, value| %>
          <%= check_box_tag 'good_numbers[]', number %> <%= "Good #{number}" %> <br />
        <% end %>
      </div>

      <div class="span2">
        <label><b>Choose combo</b></label>
        <%= check_box_tag 'combo' %> <%= "Combo Package" %> 
      </div>
      
      <%= hidden_field_tag 'expired', @question.expired? %>

      <%= button_tag 'choose', class: "btn btn-primary offset2" %>
    </div>
  <% end %>
</div>

<% unless Rails.env.production? %>
<h1>Solutions</h1>
<ul>
  <% combinations = 1.upto(@question.goods.size)
                    .flat_map { |n| @question.goods.keys.map(&:to_i).combination(n).to_a } %>
  <% combinations.each do |combo| %>
  <li>Goods <%= combo %>, Total Value: <%= @question.bundle combo %></li>
  <% end %>
  <li>Combo, Total Value: <%= @question.combo_witheffect %>
</ul>
<% end %>