<% if @question.demo? %>
<h2 class="heading">Please answer the following: </h2>
<p>How much total value will you get from the following choices?</p>
<form id="demo_form" class="form form-horizontal">

  <% @question.each_bundle do |bundle| %>
  <div class="control-group">
    <label class="control-label"><%= bundle.size == 1 ? "Good" : "Goods" %> <%= bundle %></label>
    <div class="controls">
      <input type="text" data-answer="<%= @question.bundle bundle %>"></input>
      <span class="help-inline"></span>
    </div>
  </div>
  <% end %>
  
  <div class="control-group">
    <label class="control-label">All Inclusive Combo Package</label>
    <div class="controls">
      <input type="text" data-answer="<%= @question.combo_witheffect %>"></input>
      <span class="help-inline"></span>
    </div>
  </div>

</form>
<% end %>
