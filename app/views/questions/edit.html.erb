<h1>Editing <%= @question.name %></h1>

<div class="page-header">
  <%= render 'form' %>
</div>


<div class="page-header" id="goods">
  <h2>Goods</h2>
  <%= render :partial => 'admin/goods', :object => @question.goods %>
  <%= link_to 'New Good', new_question_good_path(@question), :class => 'btn btn-primary' %>
</div>

<div class="page-header" id="bundles">
  <h2>Bundles</h2>
  <%= render :partial => 'admin/bundles', :object => @question.bundles %>
  <%= link_to 'New Bundle', new_question_bundle_path(@question), :class => 'btn btn-primary' %>
</div>

<div class="page-header" id="combo">
  <h2>Combo</h2>
  <%=  render :partial => 'admin/combo', :object => @question.combo %>
</div>

<div style="padding-top:40px">
  <%= link_to 'Back', questions_path %>
</div>
